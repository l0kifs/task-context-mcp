# Task Context MCP Server Environment Variables

# Application settings
TASK_CONTEXT_APP_NAME=Task Context MCP Server
TASK_CONTEXT_VERSION=0.1.0
TASK_CONTEXT_DEBUG=false

# Database configuration
# For SQLite (development/testing):
TASK_CONTEXT_DATABASE_URL=sqlite+aiosqlite:///./tasks.db

# For PostgreSQL (production):
# TASK_CONTEXT_DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/task_context

# Logging configuration
TASK_CONTEXT_LOG_LEVEL=INFO

# Environment selection
# ENVIRONMENT=development|testing|production